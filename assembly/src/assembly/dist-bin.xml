<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 https://maven.apache.org/xsd/assembly-2.2.0.xsd">
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>jolokia-${project.version}</baseDirectory>
  <moduleSets>
    <!-- agents -->
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-agent-jvm</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-agent-jvm.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-agent-osgi</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-agent-osgi.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-agent-war</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-agent.war</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-agent-war-unsecured</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-agent-unsecured.war</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <!-- clients -->
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-client-java</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-client.jar</outputFileNameMapping>
        <outputDirectory>clients/java</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>true</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-support-jmx</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-jmx.jar</outputFileNameMapping>
        <outputDirectory>jmx</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-support-spring</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-spring.jar</outputFileNameMapping>
        <outputDirectory>jmx</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
      <useAllReactorProjects>true</useAllReactorProjects>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <includes>
        <include>README</include>
      </includes>
      <outputDirectory />
    </fileSet>
    <fileSet>
      <directory>..</directory>
      <includes>
        <include>LICENSE</include>
        <include>NOTICE</include>
      </includes>
      <outputDirectory />
    </fileSet>
    <fileSet>
      <directory>../src/documentation/build/site</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>reference/html</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../client/javascript/target/compressed</directory>
      <includes>
        <include>**/*.js</include>
      </includes>
      <outputDirectory>clients/javascript</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../client/javascript/target/scripts</directory>
      <includes>
        <include>**/*.js</include>
      </includes>
      <outputDirectory>clients/javascript</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
